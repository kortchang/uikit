<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="text"
            type="String" />

        <variable
            name="viewModel"
            type="kort.uikit.component.edititemlist.EditItemViewModelDelegate" />
    </data>

    <kort.uikit.component.edititemlist.AddTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.addNewItemAtLast()}"
        android:text="@{text}" />
</layout>