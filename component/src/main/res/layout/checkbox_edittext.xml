<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout_checkboxEdittext"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkBox_checkboxEdittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            />

        <EditText
            android:id="@+id/editText_checkboxEdittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="textMultiLine|textImeMultiLine"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="88dp" />

        <TextView
            android:id="@+id/textView_checkboxEdittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="354dp"
            tools:layout_editor_absoluteY="13dp" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_checkboxEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="left"
            app:constraint_referenced_ids="checkBox_checkboxEdittext,editText_checkboxEdittext,textView_checkboxEdittext"
            app:flow_horizontalAlign="start"
            app:flow_horizontalBias="0"
            app:flow_horizontalStyle="packed"
            app:flow_verticalAlign="baseline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>